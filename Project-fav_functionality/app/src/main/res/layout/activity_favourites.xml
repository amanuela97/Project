<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fav_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/fav_list_empty"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/ic_baseline_favorite_24"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image_of_a_heart" />

    <TextView
        android:id="@+id/empty_list_text"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_favourites_yet"
        android:textColor="@color/searchBarTextColor"
        android:layout_alignBottom="@id/fav_list_empty"
        android:layout_marginBottom="-50dp"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>